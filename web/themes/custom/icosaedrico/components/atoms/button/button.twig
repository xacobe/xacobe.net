{%
  set classes = [
    'btn',
    'btn-' ~ button_color|clean_class,
    button_color == "link" ? "p-0",
    button_size ? "btn-" ~ button_size,
    button_size == "sm" ? "text-xs",
    button_text_size ? "btn-" ~ button_text_size,
    button_outline ? "btn-outline",
    button_glass ? "btn-glass",
    button_disable == "class" ? "btn-disable",
    button_shape ? "btn-" ~ button_shape,
  ]
%}

<{{ button_tag }} href="{{ button_href }}" target="{{ button_target|default('_self')}}" title="{{ button_text|striptags }}" {{ attributes.addClass(classes) }}>
  {{ button_text }}
  {% if button_icon is not empty %}
    {% set icon_attributes = create_attribute() %}
    
    {{ include("icosaedrico:icon", {
      icon_name: button_icon,
      icon_svg_size: button_icon_size|default("16"),
      icon_svg_classes: "inline-block",
      attributes: icon_attributes,
    }, with_context = false) }}
  {% endif %}
</{{ button_tag }}>